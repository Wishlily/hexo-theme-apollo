<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>

<% if (theme.fancybox){ %>
<link rel="stylesheet" href="<%- config.root %>fancybox/jquery.fancybox.css" media="screen" type="text/css">
<script src="<%- config.root %>fancybox/jquery.fancybox.pack.js"></script>
<% } %>

<% if (theme.aplayer){ %>
	<% page.categories && page.categories.forEach(function(category){ %>
		<% if (category.name == "音乐") { %>
			<!-- https://github.com/MoePlayer/APlayer-Typecho -->
			<link rel="stylesheet" href="<%- config.root %>aplayer/APlayer.min.css">
			<script src="<%- config.root %>aplayer/APlayer.min.js"></script>
			<script src="<%- config.root %>aplayer/Meting.min.js"></script>
		<% } %>
	<% }) %>
<% } %>

<%- js('js/script') %>